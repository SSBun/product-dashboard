---
import Layout from '../../layouts/Layout.astro';
import { products } from '../../data/products';

export async function getStaticPaths() {
  return products.map((product) => ({
    params: { id: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
const isFramework = product.type === 'framework';
const isWebsite = product.type === 'website';
const headerClass = isFramework ? 'framework' : isWebsite ? 'website' : 'app';
const typeLabel = isFramework ? 'Framework' : isWebsite ? 'Online Tool' : 'App';
const actionLabel = isFramework ? 'View Documentation' : isWebsite ? 'Visit Website' : 'View on GitHub';
---

<Layout title={`${product.name} - Product Detail`}>
	<main>
		<nav class="breadcrumb">
			<a href="/product-dashboard/">&larr; Back to Dashboard</a>
		</nav>

		<header class={`detail-header ${headerClass}`}>
			<div class="header-content">
				<div class="icon-large">{product.icon}</div>
				<div class="title-section">
					<div class="badge-row">
						<span class="type-badge">{typeLabel}</span>
						<span class="category-badge">{product.category}</span>
					</div>
					<h1>{product.name}</h1>
					<p class="tagline">{product.tagline}</p>
				</div>
			</div>
		</header>

		<section class="detail-content">
			{product.gallery && product.gallery.length > 0 && (
				<div class="gallery-section">
					<h2>Snapshot Gallery</h2>
					<div class="gallery-grid">
						{product.gallery.map((item) => (
							<div class="gallery-item">
								{item.type === 'image' ? (
									<img src={item.url} alt={item.caption || product.name} class="gallery-media" />
								) : (
									<video src={item.url} controls class="gallery-media" />
								)}
								{item.caption && <p class="caption">{item.caption}</p>}
							</div>
						))}
					</div>
				</div>
			)}

			<div class="info-card">
				<h2>About {product.name}</h2>
				<p class="description">{product.longDescription || product.description}</p>
			</div>

			<div class="features-section">
				<h2>Key Features</h2>
				<div class="features-grid">
					{product.features.map((feature) => (
						<div class="feature-item">
							<span class="check">âœ“</span>
							<p>{feature}</p>
						</div>
					))}
				</div>
			</div>

			{product.useCases && product.useCases.length > 0 && (
				<div class="use-cases-section">
					<h2>Use Cases</h2>
					<ul class="use-cases-list">
						{product.useCases.map((useCase) => (
							<li>{useCase}</li>
						))}
					</ul>
				</div>
			)}

			{product.systemRequirements && product.systemRequirements.length > 0 && (
				<div class="requirements-section">
					<h2>System Requirements</h2>
					<ul class="requirements-list">
						{product.systemRequirements.map((req) => (
							<li>{req}</li>
						))}
					</ul>
				</div>
			)}

			<div class="action-section">
				<a href={product.link} target="_blank" rel="noopener noreferrer" class="primary-button">
					{actionLabel}
				</a>
			</div>
		</section>

		<footer>
			<p>&copy; 2026 SSBun (Silas). All rights reserved.</p>
		</footer>
	</main>
</Layout>

