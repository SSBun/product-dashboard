	}
	.primary-button {
		display: inline-block;
		background: white;
		color: #13151a;
		padding: 1rem 2.5rem;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1.1rem;
		transition: all 0.2s;
	}
	.primary-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(255, 255, 255, 0.1);
		background: rgb(var(--accent-light));
	}
	footer {
		margin-top: 4rem;
		text-align: center;
		font-size: 0.9rem;
		color: #666;
	}
